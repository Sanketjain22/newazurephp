---
- name: Fresh install Grafana 12.x with custom config
  hosts: grafana_servers
  become: yes

  vars:
    grafana_config_src: files/grafana.ini
    grafana_config_dest: /etc/grafana/grafana.ini

  tasks:
    - name: Install dependencies (Debian/Ubuntu)
      apt:
        name: "{{ item }}"
        state: present
        update_cache: yes
      loop:
        - software-properties-common
        - apt-transport-https
        - wget
      when: ansible_facts['os_family'] == "Debian"

    - name: Add Grafana repo key
      apt_key:
        url: https://packages.grafana.com/gpg.key
        state: present
      when: ansible_facts['os_family'] == "Debian"

    - name: Add Grafana repo (Debian/Ubuntu)
      apt_repository:
        repo: "deb https://packages.grafana.com/oss/deb stable main"
        state: present
        filename: grafana
      when: ansible_facts['os_family'] == "Debian"

    - name: Add Grafana repo (RHEL/CentOS)
      yum_repository:
        name: grafana
        description: Grafana OSS
        baseurl: https://packages.grafana.com/oss/rpm
        gpgcheck: yes
        gpgkey: https://packages.grafana.com/gpg.key
        repo_gpgcheck: yes
        enabled: yes
      when: ansible_facts['os_family'] == "RedHat"

    - name: Install Grafana (Debian/Ubuntu)
      apt:
        name: grafana
        state: latest
        update_cache: yes
      when: ansible_facts['os_family'] == "Debian"

    - name: Install Grafana (RHEL/CentOS)
      yum:
        name: grafana
        state: latest
      when: ansible_facts['os_family'] == "RedHat"

    - name: Deploy custom grafana.ini
      copy:
        src: "{{ grafana_config_src }}"
        dest: "{{ grafana_config_dest }}"
        owner: root
        group: grafana
        mode: '0644'

    - name: Enable and start Grafana service
      systemd:
        name: grafana-server
        state: started
        enabled: yes
